<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Passing_Data_Maui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry Placeholder="Enter Username" x:Name="EntUserName"/>
            <Entry Placeholder="Enter Password" x:Name="EntPassword" IsPassword="True" />
            <Button Text="Login" x:Name="GoToPage2" Clicked="GoToPage2_Clicked"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
